@model IEnumerable<Domain.Models.Packet>

@{
    Layout = "_LayoutStudent";
    System.Globalization.CultureInfo dutch = new System.Globalization.CultureInfo("nl-NL");

}

<style>
    img {
        width: 285px;
        height: 285px;
        object-fit: cover;
    }

    body {
        margin-bottom: 60px;
    }

    .price-container {
        background-color: white;
        border: 1px solid #ccc; /* Add borders as per your requirements */
        border-radius: 10px; /* Optional: Add rounded corners */
        padding: 5px;
        position: absolute;
        right: 8px;
        bottom: 8px;
    }

    .custom-card {
        border: 2px solid #26523f;
        border-radius: 10px; /* Replace #007BFF with the appropriate color code for your "primary" color */
        margin-bottom: 1rem; /* Equivalent to Bootstrap's mb-3 */
        margin-right: 1rem; /* Equivalent to Bootstrap's mr-3 */
        overflow: hidden;
    }

    .card-header {
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        text-align: center;
        font-weight: bold;
        border-radius: 20px;
        background-color: #62d2a2;
    }

    .custom-card:hover {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4); /* Adjust the shadow as needed */
        transition: box-shadow 0.2s; /* Add a smooth transition effect */
    }

    a:hover {
        text-decoration: none;
        color: inherit;
    }

    a {
        color: inherit;
    }
</style>


<!--TODO: Packets-->
<div class="d-flex flex-wrap" style="padding: 20px">
    @foreach (var item in Model) {
        <a href="@Url.Action("PacketDetails", "Student", new { id = item.Id })" class="custom-card" style="max-width: 21rem; position: relative;">
            <div class="card-header">@item.Name</div>
            <div class="card-body" style="position: relative;">
                <div class="img-container">
                    <img src="@item.ImageUrl" alt="Packet Image" class="img" />
                    @if (item.OverEighteen) {
                        <i class="fas fa-adult"></i>
                    }
                </div>


            </div>
            <div class="card-footer" style="background-color: #62d2a2;">
                <p class="card-text">@item.Type</p>
                <p class="card-text">@item.City - @item.Canteen</p>
                <p class="card-text">@item.DateTime.ToString("dd MMMM, HH:mm", dutch)</p>
            </div>
            <div class="price-container">
                €@item.Price
            </div>
        </a>
    }
</div>


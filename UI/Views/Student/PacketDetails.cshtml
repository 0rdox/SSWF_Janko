@model (Domain.Models.Packet, IEnumerable<Domain.Models.Product>)
@{
    Layout = "_LayoutStudent";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Packet Details</title>
    <style>
     
        .reserve-button {
            margin-top: 20px;
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }

        .card-header {
            background-color: lightgray;
        }

        .card-footer {
            background-color: lightgray;
        }
    </style>
</head>
<body>
    <div class="packet-container">
        <div class="packet-info-container">
            <div class="packet-info">
                <div class="packet-name">
                    @Model.Item1.Name (€@Model.Item1.Price)
                    @if (Model.Item1.OverEighteen) {
                        <p class="subtext">This package is 18+</p>
                    }
                </div>
                <div class="other-info-box">

                    <p>Kantine: @Model.Item1.City - @Model.Item1.Canteen</p>
                    <p>Type pakket: @Model.Item1.Type</p>
                    <p>Ophaaltijd: @Model.Item1.DateTime</p>
                    <p>Maximale ophaaltijd: @Model.Item1.MaxDateTime</p>

                </div>

            </div>


            <form method="post" asp-action="Reserve" asp-controller="Student">
                <input type="hidden" name="packetId" value="@Model.Item1.Id" />


            </form>
            <p style="margin-top:10px">Mogelijke producten:</p>
            <div class="product_images d-flex flex-wrap">
                @foreach (var item in Model.Item2) {
                    <div class="card border-primary mb-3 mr-3" style="max-width: 10rem; margin:2px">
                        <div class="card-header">@item.Name</div>
                        <div class="card-body">
                            <img src="@item.ImageUrl" alt="Packet Image" class="img-fluid" />
                        </div>
                        <div class="card-footer">
                            <p class="card-text"></p>
                        </div>
                    </div>
                }
            </div>

            @if ((bool)ViewData["OverEighteen"]) {
                <form asp-controller="Student" asp-action="Reserve" method="post">
                    <input type="hidden" name="packetId" value="@Model.Item1.Id">
                    <button class="reserve-button" type="submit">Reserveer</button>
                </form>
            } else {
                <div>Pakket is 18+, u kunt dit niet reserveren</div>
            }

        </div>
        <div class="">
            <img src="@Model.Item1.ImageUrl" alt="Packet Image" class="packet-image">
        </div>
    </div>

</body>
</html>

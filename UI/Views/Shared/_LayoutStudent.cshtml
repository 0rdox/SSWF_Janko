<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />



    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

    <style>
        /* Custom CSS for the header */
        .custom-header, .container-fluid, .navbar-brand {
            background-color: #62d2a2;
            color: white;
            padding: 0px;
            font-size: 40px;
            font-weight: 700;
        }

        .custom-header {
            border-bottom: 4px solid #48a37c;
        }


        .header-logo {
            font-size: 24px;
            font-weight: bold;
        }

        .header-icons {
            padding: 10px;
            font-size: 40px;
            display: flex;
            align-items: center;
        }

        .footer {
            background-color: #62d2a2;
            color: white;
            padding-left: 0px;
            font-size: 20px;
            border-top: 4px dashed #48a37c;
        }

        .footertext {
            padding-left: 10px;
            color: white;
        }


        i:hover {
            text-decoration: none;
            color: inherit;
            color: white;
            text-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
            transition: box-shadow 0.2s; /* Add a smooth transition effect */
        }

        i {
            color: white;
        }
    </style>

</head>
<body>
    <header class="custom-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm ">
            <div class="container-fluid">

                <img src="~/temp.png" alt="Logo" style="width: 80px; height: 80px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EcoTaste</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-right">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <div class="header-icons d-flex">
                            <i class="fas fa-user mx-2"></i>
                            <a href="/Student/Reservations" class="header-icon-link">
                                <i class="fas fa-calendar mx-2"></i>
                            </a>
                            <i class="fas fa-cog mx-2"></i>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="body">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footertext">
            &copy; 2023 - EcoTaste - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
